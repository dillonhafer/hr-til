= content_for :head, auto_discovery_link_tag(:atom, root_path(format: "atom"))

- if params[:q].present?
  %section#search
    %header.page_head
      %h1{class: page_title_classes + " my-6"}
        #{pluralize @posts.count, "post"}
        about #{params[:q]}

%section#home
  = render @posts

%nav{class: "pagination flex items-center justify-center gap-4"}
  = link_to_previous_page @posts, "newer TILs".html_safe, class: "pagination_newer bg-white py-2 px-6 uppercase text-blue text-sm hover:text-red font-medium secondary-typeface"
  = link_to_next_page @posts, "older TILs".html_safe, class: "pagination_older bg-white py-2 px-6 uppercase text-blue text-sm hover:text-red font-medium secondary-typeface"
